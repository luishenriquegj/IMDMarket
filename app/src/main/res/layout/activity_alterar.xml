<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="471dp"
        android:layout_height="113dp"
        android:background="#2196F3"
        android:paddingVertical="20sp"
        android:text="IMD Market"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="114dp"
        android:layout_height="47dp"
        android:text="save"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="572dp" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="114dp"
        android:layout_height="47dp"
        android:text="clear"
        tools:layout_editor_absoluteX="241dp"
        tools:layout_editor_absoluteY="572dp" />

    <EditText
        android:id="@+id/productDescInput"
        android:layout_width="299dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="this is an exemple of a description"
        android:inputType="text"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="420dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="123dp"
        android:layout_height="24dp"
        android:text="Product code"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="174dp" />

    <EditText
        android:id="@+id/stockInput"
        android:layout_width="299dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="123456789"
        android:inputType="text"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="509dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product name"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="274dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product description"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="381dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stock quantity"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="481dp" />

    <EditText
        android:id="@+id/productCodeInput"
        android:layout_width="299dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="1234567"
        android:inputType="text"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="207dp" />

    <EditText
        android:id="@+id/productNameInput"
        android:layout_width="299dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="product name example"
        android:inputType="text"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="306dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="333dp"
        android:layout_height="42dp"
        android:text="Update product details"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="122dp" />

</androidx.constraintlayout.widget.ConstraintLayout>